\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{mymacros}[2014/11/14 My Macros Package]



\RequirePackage{datetime}



%
% Package Options
%



\DeclareOption{macrosOff}{
%
\providecommand{\PrintDate}{}
%
\providecommand{\Intent}[1]{}
%
\providecommand{\InputSection}[1]{\input{#1}}
%
\providecommand{\DraftStatus}[1]{}
%
\providecommand{\PageBreak}{}
}



\DeclareOption{macrosOn}{
%
% Use to print date (generally on first page).
\renewcommand{\PrintDate}{\mmddyyyydate{} {\footnotesize\bf** \today{} \currenttime{} **}\\}
%
% Denote the intent of a paragraph.
\renewcommand{\Intent}[1]{{\footnotesize\bf**#1**}\\}
%
\renewcommand{\InputSection}[1]{\input{#1}\clearpage}
%
\renewcommand{\DraftStatus}[1]{ {\scriptsize\bf**D#1}}
%
\renewcommand{\PageBreak}{\clearpage}
}



\ExecuteOptions{macrosOff}

\ProcessOptions\relax



%
% Callouts
%

\newcommand{\CalloutFigure}[1]{Fig.~\ref{#1}}
\newcommand{\CalloutFigures}[2]{Figs.~\ref{#1} and~\ref{#2}}
\newcommand{\CalloutSection}[1]{Section~\ref{#1}}
\newcommand{\CalloutSectionsAThruZ}[2]{Sections~\ref{#1}--\ref{#2}}
\newcommand{\CalloutTable}[1]{Table~\ref{#1}}



